<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coin_list_fragment">

    <fragment
        android:id="@+id/coin_list_fragment"
        android:name="com.mugveiga.coinsalert.CoinListFragment"
        android:label="CoinListFragment"
        tools:layout="@layout/fragment_coin_list">
        <action
            android:id="@+id/show_coin_detail"
            app:destination="@id/coin_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/coin_detail_fragment"
        android:name="com.mugveiga.coinsalert.CoinDetailFragment"
        android:label="CoinDetailFragment"
        tools:layout="@layout/fragment_coin_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>
